<Window x:Class="Uxxu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uxxu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Usuario:" Margin="5"/>
            <TextBox x:Name="txtUsuario" Margin="5"/>
            <Label Content="Contraseña:" Margin="5"/>
            <PasswordBox x:Name="txtContrasena" Margin="5"/>
            <Button Content="Iniciar Sesión" Margin="5" Click="btnLogin_Click"/>
            <TextBlock x:Name="lblError" Margin="5" Visibility="Collapsed" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>
